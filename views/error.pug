doctype html
html
  head
    title Semester
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
    noscript
      link(rel="stylesheet" href="/assets/css/noscript.css")
  style.
    .error#content {
      margin: 20px;
      color: red;
      font-family: fantasy;
    }
    .error#content > h1, h2 {
      text-align: center;
      color: yellow;
      font-size: 30px;
    }
    
  body

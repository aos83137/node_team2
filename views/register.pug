extends layout

block content
    #register_wrap_box
        a(href="/")
            h1 TEAM 2
        form#register_form(action='/register' method='post')
            #register_id
                h3 아이디
                input#enter_id(type="id" name="id" required)
            #register_password
                h3 비밀번호
                input#enter_password(type="password" name="password" required onchange = "comparePassword(this)")
            #register_password_confirm
                h3 비밀번호 확인
                input#enter_password_confirm(type="password" name="password_confirm" required onchange = "comparePassword(this)")
                p#sameornot 비밀번호를 입력해주세요
            #register_nick
                h3 닉네임
                input#enter_nick(type="nick" name="nick" required)
            #submission
                input#sub_button(type="submit" value="가입하기")

    script.
        function comparePassword(obj){
            if(enter_password_confirm.value !== ''){
                if(enter_password.value !== enter_password_confirm.value){
                    sameornot.textContent = '비밀번호가 일치하지 않습니다';
                    sameornot.style.color = "red";
                    sub_button.disabled = 'disabled';
                }else{
                    sameornot.textContent = '비밀번호가 일치합니다';
                    sameornot.style.color = "green";
                    sub_button.disabled = false;
                }
            }else{
                sameornot.textContent = '비밀번호를 입력해주세요';
                sameornot.style.color = "black";
            }
        }
        //나중에 JQuery로 바꾸기. 
        //onchange 메서드는 포커스가 없어지면 blur 이 바뀌면 호출이 되기 때문에 실시간으로 입력할 떄마다 호출해서 체크 하게 하려면 jQuery 써야됨.
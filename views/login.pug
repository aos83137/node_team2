extends layout

block content
    #login_wrap_box
        a(href="/")
            h1 Login
        form#login-form(action='/login' method='post')
            #id_box(onclick="")
                #id_text 
                    label(for='u_id') 아이디
                #id_input 
                    input#email_box(type="text" name='u_id', required autofocus  onkeydown="JavaScript:Enter_Check();")     
                if loginError
                    .error-message= loginError   
            #passwd_box
                #passwd_text 
                    label(for='password') 비밀번호
                #passwd_input 
                    input(type="password" name='password' required)
                #passwd_submit 
                    button#login.btn(type='submit') 로그인

                
    style.
        #login_wrap_box {
            width: 1080px;
            margin: auto;
            border: solid 2px;
        }

        #login_wrap_box>a {
            text-decoration: none;
            color: black;
        }

        #login_wrap_box h1 {
            text-align: center;
            margin-bottom: 40px;
        }

        #login-form{
            max-width:40%;
            margin:24px auto;
        }
        #login-form input{
            width:100%;
            height:30px;
        }
        #passwd_submit {
            text-align:center;
            padding:10px;
        }
        #passwd_submit > button{
            border:solid 2px gray;
            width:250px;
            height:40px;
        }
        #passwd_box{
            display:none;
        }

    script. 
        function Enter_Check() {
            if (window.event.keyCode == 13) {
                // 엔터키가 눌렸을 때 실행할 내용
                login();
            }
        }

        function login(){
            var check = document.getElementById("email_box").value;
            var con = document.getElementById("passwd_box");
            var flag = false;

            if(check.length !== 0){
                flag = true;
            }
            
            if(flag){
                con.style.display = 'block';
            }
        }
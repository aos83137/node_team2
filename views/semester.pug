    .profile {
    text-align: center;
    padding-top: 20px;
    padding-bottom: 20px;
    }
    .profile img {
    border: solid 2px gray;
    border-radius: 20%;
    margin: 20px;
    transition: all ease 0.2s;
    }
    .profile img:hover {
    transform: scale(1.2);
    border: solid 2px purple;
    }
    .major > h2 {
        font-weight: bold;
    }
    .gallery {
      margin: auto;
      max-width: 1080px;
    }
    .arr {
      display: inline;
    }
    .main-img {
      display: inline;
    }
    .main-img > img {
      width: 20%;
      height: 140px;
    }
    #img_content {
      width: 20%;
      height: 50px;

doctype html
html
  head
    title Login
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
    noscript
      link(rel="stylesheet" href="/assets/css/noscript.css")
    script.
      function Enter_Check() {
      if (window.event.keyCode == 13) {
      login();
      }
      }
      function login(){
      var check = document.getElementById("email_box").value;
      var con = document.getElementById("passwd_box");
      var flag = false;
      if(check.length !== 0){
      flag = true;
      }
      if(flag){
      con.style.display = 'block';
      }
      }
  style.
    .major > h2 {
    font-weight: bold;
    }
    #login_wrap_box {
    margin: 0 auto;
    text-align: center;
    }
    #login_form {
    max-width: 40%;
    margin: auto;
    }
    #id_box {
    margin-bottom: 30px;
    font-size: 20px;
    }
    #passwd_box {
    margin-bottom: 30px;
    font-size: 20px;
    }
    #login_form input {
    width: 100%;
    }
    #passwd_box {
    display: none;
    }
    #passwd_box > #sub_button {
    margin-top: 80px;
    width: 250px;
    }
  body.is-preload
    #page-wrapper
      header#header
        h1#logo
          a(href="/") Team 2
        nav#nav
           ul
            li
              a(href="/") Home
            li
              a(href="/semester") Semester
            li
              a(href="/group_member") Members
            li
              a(href="/QnA") Q & A
            if !user
              li
                a.button.primary(href="/login") Login
              li
                a.button.primary(href="/register") Register
      #main.wrapper.style1
        .container
          header.major
            h2 LOGIN
            h4 아이디와 비밀번호을 입력하여 로그인하세요
          #login_wrap_box
            form#login_form(action='/login' method='post')
              #id_box(onclick="")
                label#id_text(for="u_id") 아이디
                input#email_box(type="text" name="u_id" required autofocus 
                onkeydown="JavaScript:Enter_Check();" placeholder="Your ID")
                if loginError
                    .error-message= loginError
              #passwd_box
                label(for="password") 비밀번호
                input(type="password" name="password" required placeholder="********")
                input#sub_button(type="submit" value="로그인")
      footer#footer
        ul.icons
          li
            a.icon.alt.fa-twitter(href="#")
              span.label Twitter
          li
            a.icon.alt.fa-facebook(href="#")
              span.label Facebook
          li
            a.icon.alt.fa-linkedin(href="#")
              span.label LinkedIn
          li
            a.icon.alt.fa-instagram(href="#")
              span.label Instagram
          li
            a.icon.alt.fa-github(href="#")
              span.label GitHub
          li
            a.icon.alt.fa-envelope(href="#")
              span.label Email

doctype html
html
  head
    title QnA
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
    noscript
      link(rel="stylesheet" href="/assets/css/noscript.css")
  style.
    section#question > hr {
      border: solid 1px;
    }
    section > h1 {
        font-size: 50px;
        text-align: center;
        font-weight: bold;
    }
    #showNick {
        margin-right: 20px;
    }
    #nav {
      font-weight: bold;
    }
    #question{
      display : none;
    }
    text {
      margin-top: 50px;
    }
    text:hover{
      color : violet;
      cursor: pointer;
      font-weight: bold;
    }
    #QnA_table > tbody tr:hover{
      cursor: pointer;
    }

    #QnA_title {
      margin-bottom: 10px;
    }

    #QnA_content {
      margin-bottom: 10px;
    }

    input {
      margin-bottom: 10px;
    }

    #qna_information{
      text-align : end;
    }
    #qna_information text{
      margin-right : 20px;
    }
    #get_u_nickName{
      display: none;
    }
    #answer_box{
      margin-top : 20px;
    }

    input{
      margin-top : 10px;
    }

    #for_qid{
      display : none;
    }
    thead th,tbody td{
      text-align : center;
      vertical-align : middle;
    }

    #QnA_btn {
      margin-bottom: 20px;
    }
    

  body.is-preload
    #page-wrapper
      header#header
        h1#logo
          a(href="/") Team 2
        nav#nav
          ul
            li
              a(href="/") Home
            li
              a(href="/semester") Semester
            li
              a(href="/group_member") Members
            li
              a(href="/QnA") Q & A
            if !user
              li
                a.button.primary(href="/login") Login
              li
                a.button.primary(href="/register") Register
            else
              li
                a#showNick.button.primary= "안녕하세요, " + user.u_nickName + "님!"
                a.button.primary(href='/logout') Logout
      #main.wrapper.style1
        .container         
          section
            h1 Q & A
            .table-wrapper
              table#QnA_table
                thead
                  tr
                    th Number
                    th Title
                    th Nick
                    th Time
                tbody
                  for qna in qnas
                    tr  
                      td= qnas.indexOf(qna)+1
                      td= qna.q_title
                      td= qna.q_nick
                      td= qna.createdAt
                      td#for_qid= qna.id
            if user
              input#get_u_nickName(type='text' value= user.u_nickName)
            #qna_information
            input#QnA_btn(type="button" value = "질문하기")
          if !user
            h5 로그인이 필요한 서비스입니다
          else
            section#question
              h3 질문하기  
              form( action='/QnA' method='post')
                #QnA_input
                  #QnA_title
                    input#name(type="text" name="title" value="" placeholder="제목")
                  #QnA_content
                    textarea#message(name="content" placeholder="내용을 입력하세요" rows="6")
                  #qna_con_btn
                    ul.actions
                      li
                        input#inputBtn(type="submit" value="저장하기")
                      li
                        input#backBtn(type="reset" value="취소")
      footer#footer
        ul.icons
          li
            a.icon.alt.fa-twitter(href="#")
              span.label Twitter
          li
            a.icon.alt.fa-facebook(href="#")
              span.label Facebook
          li
            a.icon.alt.fa-linkedin(href="#")
              span.label LinkedIn
          li
            a.icon.alt.fa-instagram(href="#")
              span.label Instagram
          li
            a.icon.alt.fa-github(href="#")
              span.label GitHub
          li
            a.icon.alt.fa-envelope(href="#")
              span.label Email
        ul.copyright
          li Copyright@Team2
          li
            | Design: 
            a(href="http://html5up.net") HTML5 UP

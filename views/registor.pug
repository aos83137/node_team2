extends layout

block content
    table#registortable
        tr
            th(colspan="2")  회원가입
        tr
            td 아이디
            td
                input#put_id(type="text")
        tr
            td 비밀번호
            td
                input#put_passwd(type="password")
        tr
            td 이름
            td
                input#put_name(type="text")
        tr
            td 별명
            td
                input#put_alias(type="text")
        tr
            td 연락처
            td
                input#put_phone(type="text")
        tr
            td(colspan="2" style="text-align: center;")
                input#put_signUp(type="submit" value="가입")

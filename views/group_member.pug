        #half1 {
            margin-top: 50px;
        }

        #half2 {
            margin-top: 50px;
            margin-bottom: 50px;
            margin-left: 200px;
            margin-right: 200px;
            border: solid 2px;
            border-radius: 30px;
        }

        #half3 {
            margin-bottom: 50px;
        }

        .profile {
            text-align: center;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .profile img {
            margin : 20px;
            transition: all ease 1s;
        }

        .profile img:hover {
            transform: scale(1.1);
        }
            

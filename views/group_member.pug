doctype html
html
  head
    title Members
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
    noscript
      link(rel="stylesheet" href="/assets/css/noscript.css")
  style.
    #showNick {
        margin-right: 20px;
      }
    #half1 {
    margin-top: 50px;
    }
    #half2 {
    margin-top: 50px;
    margin-bottom: 50px;
    margin-left: 200px;
    margin-right: 200px;
    border: solid 2px;
    border-radius: 30px;
    }
    #half3 {
    margin-bottom: 50px;
    }
    .profile {
    text-align: center;
    padding-top: 20px;
    padding-bottom: 20px;
    }
    .profile img {
    border: solid 2px gray;
    border-radius: 20%;
    margin: 20px;
    transition: all ease 1s;
    }
    .profile img:hover {
    transform: scale(1.1);
    border: solid 2px black;
    cursor : pointer;
    }
    .major > h2 {
        font-weight: bold;
    }
  body.is-preload
    #page-wrapper
      header#header
        h1#logo
          a(href="/") Team 2
        nav#nav
          ul
            li
              a(href="/") Home
            li
              a(href="/semester") Semester
            li
              a(href="/group_member") Members
            li
              a(href="/QnA") Q & A
            if !user
              li
                a.button.primary(href="/login") Login
              li
                a.button.primary(href="/register") Register
            else
              li
                a#showNick= "안녕하세요, " + user.u_nickName + "님!"
                a.button.primary(href='/logout') Logout
      #main.wrapper.style1
        .container
          header.major
            h2 Members
            p 이 웹페이지를 만든 사람들의 정보입니다
          section
            header.profile
              #half1
                img#image1(src="/images/서영훈.jpg", width="250", height="200")
                img#image2(src="/images/정현재.jpg", width="250", height="200")
              #half2
                #half2_content
                p#member_information
              #half3
                img#image3(src="/images/전용석.jpg", width="250", height="200")
                img#image4(src="/images/정인식.jpg", width="250", height="200") 
                img#image5(src="/images/조영준.jpg", width="250", height="200")
      footer#footer
        ul.icons
          li
            a.icon.alt.fa-twitter(href="#")
              span.label Twitter
          li
            a.icon.alt.fa-facebook(href="#")
              span.label Facebook
          li
            a.icon.alt.fa-linkedin(href="#")
              span.label LinkedIn
          li
            a.icon.alt.fa-instagram(href="#")
              span.label Instagram
          li
            a.icon.alt.fa-github(href="#")
              span.label GitHub
          li
            a.icon.alt.fa-envelope(href="#")
              span.label Email
